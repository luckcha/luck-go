pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'my-go-app'
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from GitHub
                git 'https://github.com/luckcha/luck-go.git'
            }
        }

        stage('Build Go Application') {
            steps {
                // Install Go and Build the Go Application
                script {
                    bat 'go mod tidy'     // Ensure dependencies are updated
                    bat 'go build -o myapp'  // Build Go binary
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                // Build the Docker image
                script {
                    bat '''
                    docker build -t %DOCKER_IMAGE%:%DOCKER_TAG% .
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Login to Docker Hub and push the image (only if on main branch)
                    if (env.GIT_BRANCH == 'origin/main') {
                        bat '''
                        echo %DOCKER_PASSWORD% | docker login --username %DOCKER_USERNAME% --password-stdin
                        docker tag %DOCKER_IMAGE%:%DOCKER_TAG% %DOCKER_USERNAME%/%DOCKER_IMAGE%:%DOCKER_TAG%
                        docker push %DOCKER_USERNAME%/%DOCKER_IMAGE%:%DOCKER_TAG%
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()  // Clean workspace after the build
        }
    }
}
